<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kronostudios.the_game">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trivial"
        tools:targetApi="n">
        <activity
            android:name=".activities.GameBoard"
            android:exported="false" />
        <activity
            android:name=".activities.BuildSelection"
            android:exported="false" />
        <activity
            android:name=".activities.GamemodeSelection"
            android:exported="false" />
        <activity
            android:name=".activities.About"
            android:exported="false" />
        <activity
            android:name=".activities.TermsAndCond"
            android:exported="false" />
        <activity
            android:name=".activities.MainMenu"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>