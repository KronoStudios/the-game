<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable
            name="characterViewModel"
            type="com.kronostudios.the_game.viewmodel.CharacterViewModel" />
        <variable
            name="charIg"
            type="com.kronostudios.the_game.core.CharacterIG"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameBoard">

    <TextView
        android:id="@+id/tvCharEnemy1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btnCharEnemy1"
        app:layout_constraintStart_toStartOf="@+id/btnCharEnemy1"
        app:layout_constraintTop_toBottomOf="@+id/btnCharEnemy1" />

    <TextView
        android:id="@+id/tvCharEnemy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btnCharEnemy2"
        app:layout_constraintStart_toStartOf="@+id/btnCharEnemy2"
        app:layout_constraintTop_toBottomOf="@+id/btnCharEnemy2" />

    <TextView
        android:id="@+id/tvCharEnemy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btnCharEnemy3"
        app:layout_constraintStart_toStartOf="@+id/btnCharEnemy3"
        app:layout_constraintTop_toBottomOf="@+id/btnCharEnemy3" />

    <TextView
        android:id="@+id/tvHealthChar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btnChar1"
        app:layout_constraintStart_toStartOf="@+id/btnChar1"
        app:layout_constraintTop_toBottomOf="@+id/btnChar1" />

    <TextView
        android:id="@+id/tvHealthChar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btnChar2"
        app:layout_constraintStart_toStartOf="@+id/btnChar2"
        app:layout_constraintTop_toBottomOf="@+id/btnChar2" />

    <TextView
        android:id="@+id/tvHealthChar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btnChar3"
        app:layout_constraintStart_toStartOf="@+id/btnChar3"
        app:layout_constraintTop_toBottomOf="@+id/btnChar3" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/btnCharEnemy1"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:onClick="@{()-> characterViewModel.setTarget(charIg)}"
        android:name="com.kronostudios.the_game.activities.fragments.CharacterFragment"
        app:layout_constraintEnd_toStartOf="@+id/btnHand2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/btnCharEnemy2"
        android:onClick="@{()-> characterViewModel.setTarget(charIg)}"
        android:name="com.kronostudios.the_game.activities.fragments.CharacterFragment"
        android:layout_width="100dp"
        android:layout_height="175dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/btnCharEnemy3"
        android:name="com.kronostudios.the_game.activities.fragments.CharacterFragment"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:onClick="@{()-> characterViewModel.setTarget(charIg)}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCharEnemy2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/btnChar1"
        android:name="com.kronostudios.the_game.activities.fragments.CharacterFragment"
        android:onClick="@{()-> characterViewModel.setExecutor(charIg)}"
        android:layout_width="100dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toTopOf="@+id/btnHand1"
        app:layout_constraintEnd_toStartOf="@+id/btnChar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCharEnemy1"  />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/btnChar3"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:onClick="@{()-> characterViewModel.setExecutor(charIg)}"
        android:name="com.kronostudios.the_game.activities.fragments.CharacterFragment"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/btnHand3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnChar2"
        app:layout_constraintTop_toBottomOf="@+id/btnCharEnemy3" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/btnChar2"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:onClick="@{()-> characterViewModel.setExecutor(charIg)}"
        android:name="com.kronostudios.the_game.activities.fragments.CharacterFragment"
        app:layout_constraintBottom_toTopOf="@+id/btnHand2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCharEnemy2" />

    <Button
        android:id="@+id/btnHand1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="10sp"
        android:onClick="useCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnHand2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHealthChar1"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/btnHand2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="useCard"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHealthChar2"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/btnHand3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="useCard"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHand2"
        app:layout_constraintTop_toBottomOf="@+id/tvHealthChar3"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/btnNextTurn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/next_turn"
        android:onClick="endTurn"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHand2"
        app:layout_constraintTop_toBottomOf="@+id/btnHand3"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>